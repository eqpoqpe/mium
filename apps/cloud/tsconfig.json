{
  "extends": "ts-node/node16/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "sourceMap": false,
    "outDir": "dist",
    "target": "ES2020",
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node"
    }
  },
  "exclude": [
    "__features__/**/*.ts",
    "__tests__/**/*.ts"
  ],
  "references": []
}